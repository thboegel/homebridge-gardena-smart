{
  "pluginAlias": "gardena-smart",
  "pluginType": "accessory",
  "singular": true,
  "headerDisplay": "Homebridge plugin for smart Gardena sensors with history support (soil temperature and humidity)",
  "footerDisplay": "For a detailed description, see the [README](https://github.com/thboegel/homebridge-gardena-smart) file.",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "default": "Sensor",
        "required": true
      },
	"manufacturer": {
        "title": "Manufacturer",
        "type": "string",
        "default": "Gardena",
        "required": true
      },
  "updateInterval": {
        "title": "Update Interval in seconds",
        "type": "integer",
        "default": 30,
        "required": true
      },	  
	  "model": {
        "title": "Model",
        "type": "string",
        "default": "Sensor",
        "required": true
      },
	  "username": {
        "title": "Username",
        "type": "string",
        "default": "john.doe@domain.com",
        "required": true
      },	  
	  "password": {
        "title": "Password",
        "type": "string",
        "default": "12345",
        "required": true
      }
    }
  }
}
